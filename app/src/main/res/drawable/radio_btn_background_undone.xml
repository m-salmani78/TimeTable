<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/radio_btn_corner" android:bottomRightRadius="@dimen/radio_btn_corner" />
            <solid android:color="@android:color/holo_red_dark" />
            <padding android:bottom="@dimen/radio_btn_padding" android:top="@dimen/radio_btn_padding" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_semitransparent" />
            <corners android:bottomLeftRadius="@dimen/radio_btn_corner" android:bottomRightRadius="@dimen/radio_btn_corner" />
            <padding android:bottom="@dimen/radio_btn_padding" android:top="@dimen/radio_btn_padding" />
        </shape>
    </item>
</selector>
