<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:bottomRightRadius="@dimen/radio_btn_corner"
                        android:bottomLeftRadius="@dimen/radio_btn_corner"/>
                    <solid android:color="@android:color/holo_red_dark" />
                    <padding
                        android:top="@dimen/radio_btn_padding_side"
                        android:bottom="@dimen/radio_btn_padding"
                        android:right="@dimen/radio_btn_padding"
                        android:left="@dimen/radio_btn_padding"
                        />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/round_clear_white_24"
                    android:alpha="0.9"
                    android:gravity="center"/>
            </item>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/radio_btn_corner"
                        android:bottomRightRadius="@dimen/radio_btn_corner"/>
                    <solid android:color="#ccc" />
                    <padding
                        android:top="@dimen/radio_btn_padding_side"
                        android:bottom="@dimen/radio_btn_padding"
                        android:right="@dimen/radio_btn_padding"
                        android:left="@dimen/radio_btn_padding"
                        />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/round_clear_white_24"
                    android:gravity="center"/>
            </item>
        </layer-list>
    </item>
</selector>
