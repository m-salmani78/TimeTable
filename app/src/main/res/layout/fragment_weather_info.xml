<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layoutDirection="locale"
    tools:context=".ui.main.WeatherInfoFragment">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="2"
            android:gravity="center"
            android:lines="1"
            android:text="@string/weather_info"
            android:textColor="@android:color/white"
            android:textSize="@dimen/large_font_size"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/request_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_search_48dp"
            android:tint="@color/colorPrimary"
            app:backgroundTint="@android:color/white"
            app:fabSize="normal" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:layout_weight="2"
            android:ems="6"
            android:gravity="center"
            android:hint="@string/city_name"
            android:inputType="textPersonName"
            android:textColor="@android:color/white"
            android:textColorHint="#ccffffff"
            app:backgroundTint="@android:color/white" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/developer_name_txt"
        android:layout_below="@id/linear_layout"
        android:layout_marginBottom="4dp"
        android:background="@drawable/blunt_corners_bg"
        android:backgroundTint="@android:color/white">

        <LinearLayout
            android:id="@+id/weather_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/name_txt"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/description"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/temp"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/min_temp"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/max_temp"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/humidity"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/pressure"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="yazd" />

                <TextView
                    android:id="@+id/description_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

                <TextView
                    android:id="@+id/temp_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

                <TextView
                    android:id="@+id/min_temp_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

                <TextView
                    android:id="@+id/max_temp_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

                <TextView
                    android:id="@+id/humidity_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

                <TextView
                    android:id="@+id/pressure_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/developer_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/edwardian_script"
        android:text="@string/developer"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_font_size"
        android:textStyle="normal" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/no_connection_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_no_internet_connection_96"
        android:visibility="invisible" />


</RelativeLayout>