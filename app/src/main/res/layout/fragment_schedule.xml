<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ScheduleFragment">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/small_margin"
        android:gravity="center"
        android:text="@string/weather_info"
        android:textSize="@dimen/large_font_size"
        android:textStyle="bold" />

    <Button
        android:id="@+id/request_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/small_margin"
        android:layout_toEndOf="@id/textView3"
        android:text="find" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_margin="@dimen/normal_margin"
        android:background="@drawable/edit_text_background">

        <LinearLayout
            android:id="@+id/weather_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/name_txt"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/description"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/temp"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/min_temp"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/max_temp"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/humidity"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/pressure"
                    android:textSize="@dimen/large_font_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="yazd" />

                <TextView
                    android:id="@+id/description_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

                <TextView
                    android:id="@+id/temp_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

                <TextView
                    android:id="@+id/min_temp_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

                <TextView
                    android:id="@+id/max_temp_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

                <TextView
                    android:id="@+id/humidity_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

                <TextView
                    android:id="@+id/pressure_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height"
                    android:layout_margin="@dimen/small_margin"
                    android:gravity="center"
                    android:maxLength="6"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="123.456" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/no_connection_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_no_internet_connection_96"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:layout_margin="@dimen/normal_margin"
        android:inputType="textPersonName"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Name" />

</RelativeLayout>